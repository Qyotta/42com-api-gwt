<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b='urn:import:org.gwtbootstrap3.client.ui' xmlns:b.html='urn:import:org.gwtbootstrap3.client.ui.html'>

   <b:Container b:id="main" fluid="true">
      <b:Row>
         <b:Column b:id="sidebar-left" size="XS_2 SM_2">
            <b:Nav addStyleNames="main-menu" ui:field="sideMenu">
               <b:ListItem active="true">
                  <b:ThumbnailLink ui:field="dashboardLink">
                     <b:Icon type="DASHBOARD" />
                     <b.html:Span hiddenOn="XS" text="Dashboard" />
                  </b:ThumbnailLink>
               </b:ListItem>
               
               <b:ListItem active="true">
                  <b:ThumbnailLink ui:field="accountLink">
                     <b:Icon type="CUBE" />
                     <b.html:Span hiddenOn="XS" text="Account" />
                  </b:ThumbnailLink>
               </b:ListItem>

            </b:Nav>
         </b:Column>
         <g:SimplePanel ui:field="content" addStyleNames="col-xs-12 col-sm-10" />
      </b:Row>
   </b:Container>

</ui:UiBinder>
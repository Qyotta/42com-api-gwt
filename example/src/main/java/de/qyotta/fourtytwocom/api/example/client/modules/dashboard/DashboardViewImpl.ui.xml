<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b='urn:import:org.gwtbootstrap3.client.ui' xmlns:b.html='urn:import:org.gwtbootstrap3.client.ui.html'>

   <b.html:Div>
      <b:Row>
         <b:Column size="MD_7">
            <b.html:Div addStyleNames="box">
               <b.html:Div addStyleNames="box-content">
                  <b:Form>
                     <b:FieldSet>
                        <b:Legend text="Setup your account for all REST calls:" />

                        <b:FormGroup>
                           <b:FormLabel for="domain" text="Domain" />
                           <b:Input type="TEXT" b:id="domain" ui:field="domain" text="http://login.42call.com" />
                        </b:FormGroup>

                        <b:FormGroup>
                           <b:FormLabel for="username" text="Username" />
                           <b:Input type="TEXT" b:id="username" ui:field="username" text="test" />
                        </b:FormGroup>

                        <b:FormGroup>
                           <b:FormLabel for="password" text="Password" />
                           <b:Input type="PASSWORD" b:id="password" ui:field="password" text="test" />
                        </b:FormGroup>

                        <b:Button type="SUCCESS" text="Save" ui:field="saveButton" />
                     </b:FieldSet>
                  </b:Form>

               </b.html:Div>
            </b.html:Div>
         </b:Column>

         <b:Column size="MD_5">
            <b.html:Div addStyleNames="box">
               <b.html:Div addStyleNames="box-content">
                  <b:Form>
                     <b:FieldSet>
                        <b:Legend text="Your resulting Uri:" />

                        <b.html:Span ui:field="resultingUri"></b.html:Span>
                     </b:FieldSet>
                  </b:Form>

               </b.html:Div>
            </b.html:Div>
         </b:Column>
      </b:Row>
   </b.html:Div>
</ui:UiBinder>